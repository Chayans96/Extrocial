<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title%> </title>
</head>
<body>
   
    <h1 class="title"><%= title%></h1>
    <!-- <button id="login">Login !!</button> -->
    <!-- <button type="submit" action="/users/sign-up">Signup</button> -->
    <!-- <link src="/js/home.js"> -->

    <section class="feed-post">
        
        <% if(locals.user){%>
            <form action="/posts/create" id="new-post-form" method="POST" >
                <textarea name="content"  cols="30" rows="10" placeholder="type here..."></textarea>
                <button type="submit" value="post">POST</button>
            </form>
        <%}%>
        <div id="posts-list-container">
            <ul>
                <%for(post of posts) {%>
                <li>
                   <p> <%= post.content %> </p>
                   <!-- post .user is not comming -->
                   <p> <%= post._id %> </p>
                   <div class="post-comments">

                    <% if(locals.user){ %>
                    <form action="/comments/create" method="post">
                        <input type="text" name ="content" placeholder="Comment">
                        <input type="hidden" name="post" value="<%= post._id %>" > 
                        <input type="submit" value="add comment">
                    </form>
                        
                    <% } %>
                    
                     </div>
               <div class="post-comments-list"></div>
               <ul id=" post-comments-<%=post._id%>">
                <% for(comment of post.comments){ %>
                    <p>
                        <%= comment.content %>
                        <br>
                        <small>
                            <%= comment.user.name %>
                        </small>
                    </p>
                <% } %>
               </ul>

                </li>
                <% } %>
            </ul>
        </div>

    </section>
</body>
</html>